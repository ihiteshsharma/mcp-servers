  "type": "module",
  "main": "dist/server.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "clean": "rimraf dist coverage",
    "prepare": "npm run build",
    "inspect": "modelcontextprotocol-inspector --server \"node ./dist/server.js\"",
    "plugin:build": "cd figma-plugin && npx @figma/plugin-build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22",
    "jest": "^29.7.0",
    "rimraf": "^5.0.5",
    "shx": "^0.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18"
  }
}
